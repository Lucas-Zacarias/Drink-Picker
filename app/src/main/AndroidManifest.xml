<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drinkpicker">

    <application
        android:name=".configuration.DrinkPickerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_drink_picker_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_drink_picker_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrinkPicker">
        <activity
            android:name=".ui.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.DrinkPickerSplashScreen" >
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DrinkPicker"/>

    </application>

</manifest>